{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "The root schema",
    "description": "The root schema comprises the entire JSON document.",
    "default": {},
    "examples": [
        {
            "title": "Job1",
            "salary": 100,
            "equity": "0.1"
        }
    ],
    "required": [
        "title"
    ],
    "properties": {
        "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30,
            "examples": [
                "Job1"
            ]
        },
        "salary": {
            "type": "integer",
            "minimum": 0,
            "examples": [
                100
            ]
        },
        "equity": {
            "type": "string",
            "pattern": "0|(0?\\.[0-9]+)",
            "examples": [
                "0.1"
            ]
        }
    },
    "additionalProperties": false
}